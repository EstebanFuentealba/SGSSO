<configuration>




  <connectionStrings>
    <add name="enapConnectionString" connectionString="Data Source=ALVAREZ-PC\SQLEXPRESS;Initial Catalog=enap;Integrated Security=True"
      providerName="System.Data.SqlClient" />
   <!-- <add name="enap_v1ConnectionString" connectionString="Data Source=ESTEBAN-HP\SQLEXPRESS;Initial Catalog=enap_v3;Integrated Security=True"
      providerName="System.Data.SqlClient" />-->
